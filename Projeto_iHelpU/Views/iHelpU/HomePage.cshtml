@model iHelpU.MODEL.ViewModel.HomePageVM


<style>
    .home-container {
        text-align: center;
        background-color: #333;
        color: #fff;
        padding: 20px;
    }

    .welcome-message {
        font-size: 24px;
        margin-top: 20px;
    }

    .map-image {
        width: 100%;
        max-width: 600px;
        height: auto;
        margin: 20px auto;
    }

    .announcements {
        margin-top: 30px;
    }

    .announcement-item {
        background-color: #444;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
        color: #ddd;
    }

    .request-button {
        margin-top: 30px;
        padding: 15px 30px;
        font-size: 18px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
    }
</style>

<div class="home-container">
    <div class="welcome-message">
        @Model.MensagemBemVindo
    </div>

    <img src="~/images/map-placeholder.jpg" alt="Mapa" class="map-image" />

    <div class="announcements">
        <h2>Anúncios de Serviços</h2>
        @foreach (var anuncio in Model.Anuncios)
        {
            <div class="announcement-item">
                <h3>@anuncio.NomeServico</h3>
                <p>@anuncio.Descricao</p>
            </div>
        }
    </div>

    <button class="request-button" onclick="window.location.href='@Url.Action("SolicitarServico", "Servico")'">
        Solicitar Serviço
    </button>
</div>
