@model iHelpU.MODEL.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #2c3e50; /* Fundo escuro */
        font-family: 'Arial', sans-serif;
    }

    .form-group label {
        color: #ffffff; /* Cor dos textos */
    }

    .btn-primary {
        background-color: #4CAF50;
        border: none;
    }

        .btn-primary:hover {
            background-color: #45a049;
        }

    .col-md-6 {
        background-color: #34495e; /* Cor de fundo do formulário */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #ffffff;
        text-align: center;
    }
</style>

<h1>Login</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="exemplo@dominio.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

           @*  <div class="form-group">
                <label for="Password" class="control-label">Senha</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Sua senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> *@

            <div class="form-group text-center">
                <input type="submit" value="Entrar" class="btn btn-lg btn-primary" style="width: 100%;" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="BemVindo" asp-controller="Home" class="btn btn-secondary">Voltar à Página de Boas-vindas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
